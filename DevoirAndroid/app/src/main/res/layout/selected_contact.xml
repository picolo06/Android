<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.claudy.devoirandroid.selected_contact">

    <ImageView
        android:id="@+id/selpic"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@drawable/contact_19" />

    <TextView
        android:id="@+id/selnomtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="TextView"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/selprenomtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Telephone"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/selteltxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:phoneNumber="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Email"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/selmailtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Adresse"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/seladrtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Statut"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/selstatuttxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnmodify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="modifyev"
            app:backgroundTint="@android:color/darker_gray"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_mode_edit_black_24dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btndelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginLeft="240dp"
            android:layout_weight="1"
            android:clickable="true"
            app:backgroundTint="@android:color/darker_gray"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_delete_forever_black_24dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnhome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="mainpage"
            app:backgroundTint="@android:color/darker_gray"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_home_black_24dp" />



    </LinearLayout>

</LinearLayout>
